#!/usr/bin/env perl6
use v6;

use MONKEY-TYPING; # Your not supposed to add stuff to Str but i did it anyway cuz its cool

augment class Str {
    method mc() returns Str {
        my $index=0;
        my @new_str;
        for self.split("") -> $ch {
            if $index++ %% 2 {
                @new_str.append($ch.uc);
            } else {
                @new_str.append($ch.lc);
            }
        }
        return @new_str.join;
    }
}

say slurp.mc;
