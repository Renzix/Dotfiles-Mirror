#!/usr/bin/env -S perl6 -p

sub leetspeak($num) returns Cool {
    if ($num == 1) {
        return "l"
    } elsif ($num == 3) {
        return "E"
    } elsif ($num == 4) {
        return "A"
    } elsif ($num == 0) {
        return "O"
    } else {
        return $num;
    }
}

s:g/$<a>=(<alpha>)$<b>=(<alpha>)/{$<a>.lc}{$<b>.uc}/;
s:g/$<n>=(<digit>)/{leetspeak($<n>)}/;
