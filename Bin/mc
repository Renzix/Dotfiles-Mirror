#!/usr/bin/env -S perl6 -p

sub leetspeak($letter) returns Cool {
    if ($letter == "l") {
        return "1"
    } elsif ($letter == "E") {
        return "3"
    } elsif ($letter == "A") {
        return "4"
    } elsif ($letter == "O") {
        return "0"
    } else {
        return $letter;
    }
}

s:g/$<a>=(<alpha>)$<b>=(<alpha>)/{$<a>.lc}{$<b>.uc}/;
s:g/$<u>=(<upper>)/{leetspeak($<u>)}/;
