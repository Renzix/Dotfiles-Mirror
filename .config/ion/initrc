#!/usr/bin/env ion

alias em="emacsclient -ca "" -nw"
alias ls="exa"

fn cb
	read input
	printf "\033]52;c;$(base64 <<< $input )\a"
end

fn us
	let input = $(maim -sq | curl -s -F "f:1=<-" -F "ext:1=.png" ix.io)
	echo $input.png
end

fn ss
	maim -s
end

fn pb
	read input
	echo input | curl -s -F "f:1=<-" ix.io
end

neofetch
