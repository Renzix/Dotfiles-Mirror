#!/bin/bash
sxhkd &

#VARS
export BSPWMC=".config/bspwm"

#monitor stuff
bspc monitor DVI-D-0 -d I II III
bspc monitor HDMI-0 -d IV V VI
bspc monitor DP-4 -d VII VIII

#bspc rules
bspc config click_to_focus true

#DE stuff
/usr/lib/xfce4/notifyd/xfce4-notifyd &
tint2 -c $HOME/.config/tint2/testing1 &
tint2 -c $HOME/.config/tint2/testing2 &
plank &
orage -t &
#mailspring -b &
nextcloud -u fenzix -p $(cat nextcloud.pass)

bspc rule -a Thunar state=floating
bspc rule -a Gimp-2.8 state=floating

#Wallpaper
if [ ! -f "${BSPWMC}/wallpaper.png" ]; then
	${BSPWMC}/../setwallpaper.sh 
else
	feh --bg-max ${BSPWMC}/wallpaper.png
fi


#multiple programs
ibus-daemon -drx
compton -b &
#xfce4-terminal &


