#!/bin/bash
sxhkd &

#VARS
export BSPWMC=".config/bspwm"

#monitor stuff
bspc monitor DP-2 -d I II III
bspc monitor DVI-D-0 -d IV V VI
bspc monitor DP-5 -d VII VIII IX

#bspc rules
bspc config click_to_focus true

#DE stuff
/usr/lib/xfce4/notifyd/xfce4-notifyd &
#xfce4-panel -d &
tint2 -c $HOME/.config/tint2/testing1 &
tint2 -c $HOME/.config/tint2/testing2 &

bspc rule -a Thunar state=floating
bspc rule -a Gimp-2.8 state=floating
bspc rule -a Emacs state=tiled

#Wallpaper
if [ ! -f "${BSPWMC}/wallpaper.png" ]; then
	${BSPWMC}/../setwallpaper.sh &
else
	feh --bg-max ${BSPWMC}/wallpaper.png &
fi


#multiple programs that i might not use cuz i am a CPU/Memory freak
#ibus-daemon -drx &
#compton -b &
#redshift-gtk &

#cuz fk optimum routers
#wpa_gui -t &

#for java
wmname LG3D


