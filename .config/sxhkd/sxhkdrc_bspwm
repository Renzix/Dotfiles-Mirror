### Apps ###

# Terminal
super +{_, shift +} Return
  {alacritty -e "ion", urxvt}
  

# Editor
super +{_, shift +} e
  {emacs, alacritty -e "vim"}

# Web Browser
super + {_,shift +} i
	GTK_THEME=Adwaita:light {firefox, $($HOME/.config/sxhkd/random_choice.py firefox google-chrome-stable vivaldi opera-beta brave-bin falkon epiphany)}

# Music Client
super + m
	spotify

# Email
super + p
  google-chrome-stable -app=https://mail.protonmail.com/login

# Volume Stuff
super + a
	pavucontrol
	
### Movement ###

# Focus Window
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# Focus Desktop
super + {_,shift + }{1-9}
	bspc {desktop -f,node -d} '^{1-9}'

# Next Desktop/Monitor
super + {_, alt+}  {Left, Right}
	bspc {desktop,monitor} -f {prev,next}

### DE Stuff ###

# App finder
super + {_,shift +} @space
	rofi {-show run, -modi twitchy:rofi-twitchy -show twitchy}

# Raise Audio
XF86AudioRaiseVolume
	amixer -D pulse sset Master 5%+

# Lower Audio
XF86AudioLowerVolume
	amixer -D pulse sset Master 5%-

# Switch Audio
XF86AudioMute
	~/.config/sxhkd/ca.sh

# Window Type
super + {t,shift + t,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# Close/Kill
super + {_,shift + }w
	bspc node -{c,k}

# Reload sxhkdrc
super + Escape
	pkill -USR1 -x sxhkd

# Exit bspwm
super + alt + Escape
	bspc quit

#floating mode?
