### Apps ###

# Terminal
super + Return
    st -e zsh

# Editor
super + m
    emacs

# Web Browser
super + h
      brave-bin

# File manager
XF86Explorer
    krusader
super + v
    krusader

super + g
    maim -s | tee "Local/Media/ScreenShots/$(date +%s).png" | xclip -selection clipboard -t image/png

### Functionality ###

# search
super + @space
    rofi -show run
XF86Search
    rofi -show-icons -show drun
shift + XF86Search
    xdotool type "$(CM_LAUNCHER=rofi CM_OUTPUT_CLIP=1 clipmenu)"

# Audio
XF86AudioRaiseVolume
    amixer -D pulse sset Master 5%+

XF86AudioLowerVolume
    amixer -D pulse sset Master 5%-

XF86AudioMute
    $HOME/Dotfiles/.config/sxhkd/ca.sh

### Windows ###

# Focus Window
super + {_,shift +}{n,e,i,o}
    bspc node -{f,s} {west,south,north,east}

# Focus Desktop
super + {_,shift +}{w,f,p,r,s,t,x,c,d}
    bspc {desktop -f,node -d} {w,f,p,r,s,t,x,c,d}

super + {l,u,y,;}
    bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# Close/Kill
super + {_,shift +}k
    bspc node -{c,k}

# Reload sxhkdrc
super + shift + z
    pkill -USR1 -x sxhkd

# Exit bspwm
super + shift + q
    bspc quit
