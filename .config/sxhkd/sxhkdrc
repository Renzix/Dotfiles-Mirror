### Apps ###

#Terminal
super +{_, shift +} Return
  {xfce4-terminal,st}

#Editor
super +{_, shift +} e
  {emacsclient -ca "" , subl}

#Web Browser
super + {_,shift+ }i
	{brave-bin --no-sandbox, env GTK_THEME=Adwaita:light firefox}

#Music Client
super + m
	spotify

#Volume Stuff
super + a
	pavucontrol
	
### Movement ###

# Focus Window
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

#Focus Desktop
super + {_,shift + }{1-8}
	bspc {desktop -f,node -d} '^{1-8}'

#Next Desktop/Monitor
super + {_, alt+}  {Left, Right}
	bspc {desktop,monitor} -f {prev,next}

### DE Stuff ###

#WhiskerMenu
super + @space
	rofi -show run

#Raise Audio
XF86AudioRaiseVolume
	amixer -D pulse sset Master 5%+

#Lower Audio
XF86AudioLowerVolume
	amixer -D pulse sset Master 5%-

#Switch Audio
XF86AudioMute
	~/.config/sxhkd/ca.sh

#Window Type
super + {t,shift + t,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

#Close/Kill
super + {_,shift + }w
	bspc node -{c,k}

#Reload sxhkdrc
super + Escape
	pkill -USR1 -x sxhkd

#Exit bspwm
super + alt + Escape
	bspc quit

#Poweroff/reboot
super + shift + {Escape, r}
	bspc quit; {sudo shutdown -h now, sudo reboot}
